{
  "name": "skeet-api",
  "version": "0.1.0",
  "description": "Skeet API - Full-stack TypeScript Serverless Framework",
  "main": "dist/index.js",
  "repository": "https://github.com/elsoul/skeet-api.git",
  "author": "POPPIN-FUMI",
  "license": "Apache-2.0",
  "private": false,
  "bin": {
    "skeet": "./dist/index.js"
  },
  "scripts": {
    "skeet:env": "echo $SKEET_ENV",
    "test": "jest --detectOpenHandles --maxWorkers=1",
    "db:migrate": "npx prisma migrate dev",
    "docker:network": "docker network create skeet-network",
    "docker:mongo": "docker run -d -p 27017:27017 --name skeet-mongo --network skeet-network -v mongo-data:/data/db -e MONGODB_INITDB_ROOT_USERNAME=skeeter -e MONGODB_INITDB_ROOT_PASSWORD=rabbit mongo:latest",
    "docker:psql": "docker run --restart always -d --name skeet-psql --network skeet-network -p 5432:5432 -v postres-tmp:/home/postgresql/data -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=skeet-api postgres:14-alpine",
    "docker:build": "docker build . -t $npm_package_config_app_name",
    "docker:run": "docker run -p 4002:4002 --env-file .env --name $npm_package_config_app_name $npm_package_config_app_name",
    "docker:rm": "docker rm -f $npm_package_config_app_name",
    "docker:tag": "docker tag $npm_package_config_docker_image $npm_package_config_image_url",
    "docker:push": "docker push $npm_package_config_image_url",
    "run:deploy": "gcloud run deploy $npm_package_config_app_name --image $npm_package_config_image_url --memory=$npm_package_config_memory --cpu=$npm_package_config_cpu --quiet --region=$npm_package_config_region --allow-unauthenticated --platform=managed --port=8080 --project $npm_package_config_project_id",
    "deploy": "yarn docker:build && yarn docker:tag && yarn docker:push && yarn run:deploy",
    "update:packages": "ncu -u && yarn",
    "build": "tsc",
    "publish": "npm publish",
    "dev": "ts-node-dev --transpile-only --no-notify src/index.ts",
    "dev:start": "nodenv -E .env.development dist/index.js",
    "start": "node dist/index.js",
    "sql:create": "gcloud sql instances create $npm_package_config_app_name --project=$npm_package_config_project_id --database-version=POSTGRES_14 --cpu=1 --memory=4096MB --zone=$npm_package_config_region-b --root-password=$DB_PASSWORD --database-flags cloudsql.iam_authentication=on",
    "sql:stop": "gcloud sql instances patch $npm_package_config_app_name --project=$npm_package_config_project_id --activation-policy=NEVER",
    "sql:start": "gcloud sql instances patch $npm_package_config_app_name --project=$npm_package_config_project_id --activation-policy=always",
    "sql:restart": "gcloud sql instances restart $npm_package_config_app_name --project=$npm_package_config_project_id",
    "sql:list": "gcloud sql instances list --project=$npm_package_config_project_id",
    "assign:ips": "gcloud sql instances patch $npm_package_config_app_name --project=$npm_package_config_project_id --assign-ip --authorized-networks=$WHITELIST_IPS --quiet"
  },
  "config": {
    "project_id": "skeet-framework",
    "app_name": "skeet-api",
    "docker_image": "skeet-api:latest",
    "image_url": "eu.gcr.io/skeet-framework/skeet-api:latest",
    "region": "europe-west4",
    "cpu": "1",
    "memory": "1Gi"
  },
  "dependencies": {
    "@apollo/server": "4.3.0",
    "@jcm/nexus-plugin-relay-global-id": "0.2.0",
    "@jcm/nexus-plugin-relay-node-interface": "0.2.0",
    "@prisma/client": "4.9.0",
    "apollo-server": "3.11.1",
    "apollo-server-core": "3.11.1",
    "dotenv": "16.0.3",
    "firebase-admin": "11.4.1",
    "graphql": "16.6.0",
    "graphql-middleware": "6.1.33",
    "graphql-relay": "0.10.0",
    "nexus": "1.3.0",
    "nexus-prisma": "1.0.3",
    "node-env-run": "4.0.2",
    "node-fetch": "2.6.7",
    "prisma": "4.9.0"
  },
  "devDependencies": {
    "@types/express": "4.17.15",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/node-fetch": "2.6.2",
    "@types/superagent": "4.1.16",
    "@types/supertest": "2.0.12",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "jest": "29.3.1",
    "nodemon": "2.0.20",
    "npm-check-updates": "16.6.2",
    "prettier": "2.8.2",
    "superagent": "8.0.6",
    "supertest": "6.3.3",
    "ts-jest": "29.0.4",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.4"
  }
}
